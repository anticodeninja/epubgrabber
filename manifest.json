{
    "background": {
        "persistent": true,
        "scripts": [
            "js/bg.js"
        ]
    },
    "browser_action": {
        "default_icon": "icons/32.png",
        "default_title": "EpubGrabber",
        "default_popup": "html/popup.html"
    },
    "content_scripts": [ {
        "js": [
            "js/page.js"
        ],
        "matches": [ "https://*/*", "http://*/*" ],
        "run_at": "document_end"
    } ],
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "description": "Capture any page and save to ePub",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "64": "icons/64.png",
        "128": "icons/128.png"
    },
    "manifest_version": 2,
    "name": "EpubGrabber",
    "permissions": [
        "<all_urls>",
        "activeTab",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "unlimitedStorage"
    ],
    "version": "0.0.1"
}
